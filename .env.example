# Trading Bot Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# API KEYS AND SECRETS
# =============================================================================

# Alpha Vantage API (for market data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Yahoo Finance (no key needed, but rate limited)
YAHOO_FINANCE_USER_AGENT=your_app_name/1.0

# Interactive Brokers (for live trading - when ready)
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=1

# Encryption key for securing sensitive data
ENCRYPTION_KEY=generate_with_fernet_generate_key()

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/trading_bot
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading_bot
DB_USER=trading_user
DB_PASSWORD=secure_password

# Redis (for caching and real-time data)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Environment (development, testing, production)
TRADING_ENV=development

# Risk Management
MAX_DAILY_LOSS_PERCENT=2.0
MAX_POSITION_SIZE_PERCENT=10.0
MAX_PORTFOLIO_LEVERAGE=2.0
EMERGENCY_STOP_LOSS_PERCENT=5.0

# Portfolio Configuration
INITIAL_CAPITAL=100000.00
BASE_CURRENCY=USD

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file rotation
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Monitoring and Alerts
ALERT_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_app_password

# =============================================================================
# BACKTESTING CONFIGURATION
# =============================================================================

# Data sources
DEFAULT_DATA_PROVIDER=yfinance
BACKTEST_START_DATE=2020-01-01
BACKTEST_END_DATE=2024-01-01

# Transaction costs
COMMISSION_PER_TRADE=1.00
SLIPPAGE_PERCENT=0.05

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API rate limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_HOUR=1000

# Session security
SESSION_SECRET_KEY=generate_random_secret_key
SESSION_TIMEOUT_MINUTES=30

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode (NEVER set to True in production)
DEBUG=True

# Testing database
TEST_DATABASE_URL=sqlite:///test_trading_bot.db

# Mock trading (for testing without real orders)
MOCK_TRADING=True

# Paper trading account details (when available)
PAPER_TRADING_ACCOUNT=your_paper_account_id